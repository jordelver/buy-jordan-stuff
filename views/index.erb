<!doctype html>
<html>
  <head>
    <title>Buy Jordan Stuff!</title>

    <script type="text/javascript" src="//use.typekit.net/nsy6tur.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <meta name="viewport" content="width=device-width" />

    <style>
    body {
      font-family: "futura-pt", sans-serif;
      background: #eee;
      margin: 0;
      padding: 0;
    }

    h1 {
      margin: 0;
      margin-bottom: 1px;
      font-size: 4em;
      text-transform: uppercase;
      background: #c00;
      color: #fff;
    }

    ul {
      margin: 0;
      padding: 0;
    }

    li {
      list-style: none;
      padding: 10px 0;
      font-size: 1.4em;
      background: #eee;
      margin-bottom: 1px;
      transition: background .25s ease-in-out;
      -moz-transition: background .25s ease-in-out;
      -webkit-transition: background .25s ease-in-out;
    }

    li:hover {
      background: #ccc;
      color: #333;
    }

    a {
      color: #333;
      padding: 4px 6px;
      border-radius: 10px;
    }

    #content {
      width: 80%;
      margin: 0 auto;
      padding: 30px;
      background: #fff;
      text-align: center;
    }

    /* iPads (portrait and landscape) */
    @media only screen and (min-device-width: 768px) and (max-device-width: 1024px) {
      #content {
        width: 100%;
        padding: 0;
      }
    }

    /* iPhone 4 */
    @media only screen and (max-device-width: 480px) {
      #content {
        width: 100%;
        padding: 0;
      }

      h1 {
        font-size: 2em;
      }
    }
    </style>
  </head>
<body>

<div id="content">

  <h1>Buy Jordan Stuff!</h1>

  <ul>

  <% @wishlist.each do |item| %>
    <li>
      <a href="<%= item.href %>">
        <%= item.description %>
      </a>
    </li>
  <% end %>

  </ul>

</div>

</body>
</html>

